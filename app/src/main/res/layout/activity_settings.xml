<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:aandroid="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Presenter.SettingsActivity"
    android:gravity="right"
    android:weightSum="11">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/choice_color"
        android:id="@+id/txtColor"
        android:gravity="center_vertical"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rgColor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="right"
        android:layout_weight="3">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="سبز"
            android:id="@+id/rbGreen"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="آبی"
            android:id="@+id/rbBlue"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="بنفش"
            android:id="@+id/rbViolet"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:layout_weight="1" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/choice_text_size"
        android:id="@+id/txtSize"
        android:gravity="center_vertical"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rgTextSize"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="right">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="کوچک"
            android:id="@+id/rbSmallSize"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="متوسط"
            android:id="@+id/rbMeduimSize"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="بزرگ"
            android:id="@+id/rbLargeSize"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:layout_weight="1" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/choice_text_font"
        android:id="@+id/txtFont"
        android:gravity="center_vertical"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rgtextFont"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="right">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="نازنین"
            android:id="@+id/rbNazaninFont"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="میترا"
            android:id="@+id/rbMitra"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:layout_weight="1" />

    </RadioGroup>
</LinearLayout>
